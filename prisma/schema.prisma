datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cargo {
  id     Int    @id @default(autoincrement())
  width  Float
  length Float
  height Float
  weight Float
  plan   Plan[]
}

model Vehicle {
  id     Int    @id @default(autoincrement())
  width  Int
  length Int
  height Int
  weight Int
  plan   Plan[]
}

model Client {
  id          Int        @id @default(autoincrement())
  address     String?
  coordX      Float
  coordY      Float
  time_window DateTime?
  demand      Float
  distance1   Distance[] @relation("Client1")
  distance2   Distance[] @relation("Client2")
}

model Plan {
  id        Int       @id @default(autoincrement())
  coordX    Float
  coordY    Float
  coordZ    Float
  idVehicle Int
  idCargo   Int
  cargo     Cargo     @relation(fields: [idCargo], references: [id])
  vehicle   Vehicle   @relation(fields: [idVehicle], references: [id])
}
 
model Distance {
  id       Int      @id @default(autoincrement())
  idCl1    Int
  idCl2    Int
  distance Float
  pathTime DateTime
  client1  Client   @relation("Client1", fields: [idCl1], references: [id])
  client2  Client   @relation("Client2", fields: [idCl2], references: [id])
}
