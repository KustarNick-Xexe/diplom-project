datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cargo {
  id       Int     @id @default(autoincrement())
  width    Float
  length   Float
  height   Float
  weight   Float
  idClient Int
  client   Client  @relation(fields: [idClient], references: [id])
}

model Vehicle {
  id     Int    @id @default(autoincrement())
  width  Int
  length Int
  height Int
  weight Int
  plans  Plan[] // use plural form for a one-to-many relationship
}

model Client {
  id          Int        @id @default(autoincrement())
  address     String?
  coordX      Float
  coordY      Float
  openWindow  String?
  closeWindow String?
  demand      Float
  cargos      Cargo[]  
}

model Plan {
  id        Int     @id @default(autoincrement())
  plan      String
  idVehicle Int
  vehicle   Vehicle @relation(fields: [idVehicle], references: [id])
}
